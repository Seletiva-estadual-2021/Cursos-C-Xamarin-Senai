<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsCrud.GCLogin" BackgroundColor="White" Padding="50"
             Title="Tela de acesso - Green Card">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="green-card-logo-redondo.png" Margin="0,50,0,0"/>
            <Label Text="CPF" TextColor="#1a1a1a"/>
            <Entry Placeholder="XXX.XXX.XXX-XX" Margin="0,0,0,50"/>
            <Entry Placeholder="Senha"/>
            <Button BackgroundColor="#29774b" TextColor="white" Text="ENTRAR" BorderRadius="6" HeightRequest="50" Clicked="irListaCartoes"/>
            <Button BackgroundColor="#29774b" TextColor="white" Text="ESQUECI MINHA SENHA" BorderRadius="6" HeightRequest="50"/>
            <Button BackgroundColor="#29774b" TextColor="white" Text="CADASTRAR NOVA CONTA" BorderRadius="6" HeightRequest="50"/>

            <Label Text="Versão 2.0.0" TextColor="#1a1a1a" HorizontalTextAlignment="Center" Margin="0,50,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>